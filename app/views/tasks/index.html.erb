<div class="offset-2">
<h1>Lista de Tarefas</h1>

  <div class="box box-tasks col-9">
    <table>
      <thead>
        <tr>
          <th>Id</th>
          <th>Criador</th>
          <th>Título</th>
          <th>Descrição</th>
          <th>Delegado</th>
          <th>Data de criação</th>
          <th>Estado</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @tasks.each do |task| %>
          <tr id="task-values">
            <td class="id"><%= task.id %></td>
            <td class="name"> <%= find_user_name(task.owner_id) %> </td>
            <td class="title"><%= task.title %></td>
            <td class="description"><%= task.description %></td>
            <td class="delegated"><%= find_user_name(task.delegated) %></td>
            <td class="creation_date"><%= task.created_at.strftime('%d-%m-%Y') %></td>
            <td class="status"><%= task.status %></td>
            <% if (task.status == 'uncompleted' && (current_user.id == task.owner_id || current_user.id == task.delegated)) %>
            <td class="bg-none"><%= link_to 'Concluir', completed_task_path(task), method: :put , id: 'complete'  %></td>
            <% end %>
            <td class="bg-none"><%= link_to 'Mostrar', task, class: "btn btn-info" %></td>
            <td class="bg-none"><%= link_to 'Editar', edit_task_path(task), class: "btn btn-primary" %></td>
            <td class="bg-none"><%= link_to 'Destruir', task, method: :delete, data: { confirm: 'Tem certeza?' }, class: "btn btn-danger" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<p><%= link_to 'Nova Tarefa', new_task_path, class: "btn btn-primary" %><p>
<br>
<p><%= link_to 'Voltar', homepage_path %><p>
</div>
