<p id="notice"><%= notice %></p>

<h1>Listing Tasks</h1>

<table>
  <thead>
    <tr>
      <th>Titulo</th>
      <th>Descricao</th>
      <th>Data</th>
      <th>Delegante</th>
      <th>Delegado</th>
      <th>Estado tarefa</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.titulo %></td>
        <td><%= task.descricao %></td>
        <td><%= task.data %></td>
        <td><%= task.delegante %></td>
        <td><%= task.delegado %></td>
        <td><%= task.estado_tarefa %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

