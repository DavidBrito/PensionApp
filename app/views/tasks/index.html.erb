<p id="notice"><%= notice %></p>

<h1>Listing Tasks</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Titulo</th>
      <th>Descricao</th>
      <th>Delegado</th>
      <th>Data Criação</th>
      <th>Estado</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.pk_task %></td>
        <td><%= task.title %></td>
        <td><%= task.description %></td>
        <td><%= task.delegated %></td>
        <td><%= task.created_at %></td>
        <td><%= task.status %></td>
        
        <td><%= link_to 'Mostrar', task %></td>
        <td><%= link_to 'Editar', edit_task_path(task) %></td>
        <td><%= link_to 'Destruir', task, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

