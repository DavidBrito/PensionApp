<div class="tasks-cadastro col-6 offset-3">
    <div class="col-12">
        <%= form_for(@room) do |f| %>
          <% if @room.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@room.errors.count, 'erro') %></h2>
              <ul>
              <% @room.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
              </ul>
            </div>
          <% end %>
        
          <div class="field cadastro-field">
            <%= f.label :number %><br>
            <%= f.number_field :number %>
          </div>
          
          <div class="field cadastro-field">
            <%= f.label :property_id %><br>
            <%= f.collection_select(:property_id, Property.all, :id, :name, {}, {id: "property_id_select"}) %>
          </div>
          <div class="actions">
            <%= f.submit "Criar Quarto", class: "btn btn-success" %>
          </div>
        <% end %>
    </div>
</div>