<h3> Propriedades </h4>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Nome</th>
      <th>CEP</th>
      <th>Logradouro</th>
      <th>Número</th>
      <th>Cidade</th>
      <th>Estado</th>
      <th>Proprietário</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @properties.each do |property| %>
      <tr>
        <td id="id"><%= property.id %></td>
        <td id="name"><%= property.name %></td>
        <td id="postal_code"><%= property.postal_code %></td>
        <td id="proprietary_name"><%= property.address %></td>
        <td id="number"><%= property.number %></td>
        <td id="city"><%= property.city %></td>
        <td id="state"><%= property.state %></td>
        <td id="proprietary_name"><%= find_user_name(property.proprietary_id) %></td>
        
        <td><%= link_to 'Editar', edit_property_path(property), id: 'edit' %></td>
        <td><%= link_to 'Exc,hjr', property, method: :delete, data: { confirm: 'Tem certeza?' }, id: 'destroy' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<h3>Quartos</h3>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Número</th>
      <th>Propriedade</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td><%= room.id %></td>
        <td><%= room.number %></td>
        <td><%= find_property_name(room.property_id) %></td>
        <td><%= link_to 'Edit', edit_room_path(room) %></td>
        <td><%= link_to 'Destroy', room, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<h3>Vagas</h3>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Valor</th>
      <th>Estado</th>
      <th>Quarto</th>
      <th>Ocupante</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vacancies.each do |vacancy| %>
      <tr>
        <td><%= vacancy.id %></td>
        <td><%= vacancy.value %></td>
        <td><%= vacancy.status %></td>
        <td><%= vacancy.room_id %></td>
        <td><%= find_user_name(vacancy.vacancy_owner_id) %></td>
        
        <td><%= link_to 'Editar', edit_vacancy_path(vacancy) %></td>
        <td><%= link_to 'Deletar', vacancy, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


