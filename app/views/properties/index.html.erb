<h1>Listando Propriedades, Quartos e Vagas</h1>

<h3> Propriedades </h4>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Postal code</th>
      <th>Address</th>
      <th>Number</th>
      <th>City</th>
      <th>State</th>
      <th>Proprietary</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @properties.each do |property| %>
      <tr>
        <td><%= property.name %></td>
        <td><%= property.postal_code %></td>
        <td><%= property.address %></td>
        <td><%= property.number %></td>
        <td><%= property.city %></td>
        <td><%= property.state %></td>
        <td><%= find_user_name(property.proprietary_id) %></td>
        <td><%= link_to 'Edit', edit_property_path(property) %></td>
        <td><%= link_to 'Destroy', property, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<h3>Quartos</h3>

<table>
  <thead>
    <tr>
      <th>Number</th>
      <th>Property</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td><%= room.number %></td>
        <td><%= find_property_name(room.property_id) %></td>
        <td><%= link_to 'Edit', edit_room_path(room) %></td>
        <td><%= link_to 'Destroy', room, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<h3>Vagas</h3>

<table>
  <thead>
    <tr>
      <th>Value</th>
      <th>Status</th>
      <th>Room</th>
      <th>Owner</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vacancies.each do |vacancy| %>
      <tr>
        <td><%= vacancy.value %></td>
        <td><%= vacancy.status %></td>
        <td><%= vacancy.room_id %></td>
        <td><%= find_user_name(vacancy.vacancy_owner_id) %></td>
        <td><%= link_to 'Edit', edit_vacancy_path(vacancy) %></td>
        <td><%= link_to 'Destroy', vacancy, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<br>
