
<div class="tasks-cadastro col-6 offset-3">
    <div class="col-12">
        <%= form_for(@employee) do |f| %>
          <% if @employee.errors.any? %>
            <div id="error_explanation">
               <%= pluralize(@employee.errors.count, 'erro') %>         
              <ul>
              <% @employee.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
              </ul>
            </div>
          <% end %>
        
          <div class="field cadastro-field">
            <%= f.label 'Primeiro nome' %><br>
            <%= f.text_field :first_name %>
          </div>
          <div class="field cadastro-field">
            <%= f.label 'Nome de família' %><br>
            <%= f.text_field :last_name %>
          </div>
          <div class="field cadastro-field">
            <%= f.label 'CPF' %><br>
            <%= f.text_field :cpf %>
          </div>
          <div class="field cadastro-field">
            <%= f.label 'Contato' %><br>
            <%= f.text_field :contact %>
          </div>
          <div class="actions">
            <%= f.submit "Criar Funcionário", class: "btn btn-success" %>
          </div>
        <% end %>
    </div>
</div>