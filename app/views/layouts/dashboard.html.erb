<!DOCTYPE html>
<html>
<head>
  <title>Pensionapp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link href="https://file.myfontastic.com/mGiYhDXiCVkhHCjddDw4ec/icons.css" rel="stylesheet">
</head>
<body>

<div>
     <% if user_signed_in? %>
        <div class="dash-header container-fluid d-flex justify-content-between align-items-center">
            <div class="ml-5">
                Logado como: <strong><%= current_user.name %></strong>
            </div>
            <div class="mr-5">
                <%= link_to 'Editar perfil', edit_user_registration_path, class: "btn btn-outline-primary" %> 
                <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "btn btn-outline-danger" %>
            </div>
        </div>
     <% else %>
        <%= link_to "Registrar-se", new_user_registration_path %> |
        <%= link_to "Login", new_user_session_path %>
     <% end %>
</div>

<div>
<%= content_tag(:div, flash[:error], :id => "flash_error") if flash[:error] %>
<%= content_tag(:div, flash[:notice], :id => "flash_notice") if flash[:notice] %>
<%= content_tag(:div, flash[:alert], :id => "flash_alert") if flash[:alert] %>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="dash-menu col-2">
            <h2>PensionApp</h2>
                <ul>
                    <li><a class="icon-social-github" href="#"> Dashboard </a></li>
                    <li><a class="icon-social-github" href="#"> Quadro de Avisos </a></li>
                    <li><a class="icon-social-github" href="#"> Quadro de Tarefas </a></li>
                </ul>
        </div>
        
        <div class="col-10">
            <%= yield %>
        </div>
    </div>
</div>

</body>
</html>
