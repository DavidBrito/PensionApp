<%= form_for(@maintenance) do |f| %>
  <% if @maintenance.errors.any? %>
    <div id="error_explanation">
      <%= pluralize(@maintenance.errors.count, 'erro') %>
      <% @maintenance.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <% if current_user.user_type == 'tenant' %>

  <div class="field">
    <%= f.label 'Título' %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label 'Descrição' %><br>
    <%= f.text_area :description %>
  </div>
  
  <div class="actions">
    <%= f.submit "Criar Chamada de manutenção" %>
  </div>
  
  <% else %>
    <div class="field">
    <%= f.label 'Resposta proprietário' %><br>
    <%= f.text_area :response %>
  </div>
  
  <div class="actions">
    <%= f.submit "Enviar resposta" %>
  </div>
  
  <% end %>
  
  
<% end %>
