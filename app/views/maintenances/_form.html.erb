<div class="tasks-cadastro col-6 offset-3">
    <div class="col-12">
        <%= form_for(@maintenance) do |f| %>
          <% if @maintenance.errors.any? %>
            <div id="error_explanation">
              <%= pluralize(@maintenance.errors.count, 'erro') %>
              <% @maintenance.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
              </ul>
            </div>
          <% end %>
        
          <% if current_user.user_type == 'tenant' %>
        
          <div class="field cadastro-field">
            <%= f.label 'Título' %><br>
            <%= f.text_field :title %>
          </div>
          <div class="field cadastro-field">
            <%= f.label 'Descrição' %><br>
            <%= f.text_area :description, class: "form-control" %>
          </div>
          
          <div class="actions">
            <%= f.submit "Criar Chamada de manutenção", class: "btn btn-success" %>
          </div>
          
          <% else %>
            <div class="field cadastro-field">
            <%= f.label 'Resposta proprietário' %><br>
            <%= f.text_area :response, class: "form-control" %>
          </div>
          
          <div class="actions">
            <%= f.submit "Enviar resposta", class: "btn btn-success" %>
          </div>
          
          <% end %>
        <% end %>
    </div>
</div>
